<div class="page-header">
  <h1><%= @user %></h1>

  <ul class="actions">
    <li><%= link_to "Edit User", [:edit, :admin, @user],
      class: "edit" %></li>

    <li><%= link_to "Delete User", [:admin, @user], method: :delete,
        data: { confirm: "Are you sure you want to delete this user?"},
        class: "delete" %></li>
  </ul>

  <% if @user.roles.any? %>
    <ul>
      <% @user.roles.each do |role| %>
        <li><%= role.project.name %>: <%= role.role.titleize %></li>
      <% end %>
    </ul>
  <% else %>
    <p>This user has no roles.</p>
  <% end %>
</div>
